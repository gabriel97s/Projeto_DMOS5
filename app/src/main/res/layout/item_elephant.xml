<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_elephant_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:maxLines="2"
            android:textColor="@color/colorCustom"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_elephant_picture"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/item_elephant_title" />

        <TextView
            android:id="@+id/item_elephant_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/item_elephant_picture"
            app:layout_constraintTop_toBottomOf="@+id/item_elephant_title"
            tools:text="@string/item_elephant_click_info" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_elephant_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/item_elephant_picture"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

